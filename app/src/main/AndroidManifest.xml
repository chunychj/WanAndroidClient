<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="cn.onlyloveyd.wanandroidclient">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <application
        android:name=".WanAndroidApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" tools:replace="android:icon">
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.LoginActivity" android:theme="@style/AppTheme.Dark"/>
        <activity android:name=".activity.WebActivity" android:theme="@style/AppTheme.Dark"/>
        <activity android:name=".activity.CollectionsActivity" android:theme="@style/AppTheme.Light"/>
        <activity android:name=".activity.KnowledgeActivity" android:theme="@style/AppTheme.Light"/>
    </application>

</manifest>